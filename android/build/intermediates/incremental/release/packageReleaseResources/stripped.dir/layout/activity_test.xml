<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/incoming_call_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080">

    <ImageView
        android:id="@+id/caller_photo_imageview"
        android:layout_width="195dp"
        android:layout_height="175dp"
        android:layout_below="@id/caller_name_textview"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/incoming_call_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Llamada entrante"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caller_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incoming_call_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Juan Perez"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/reject_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FF0000"
        android:onClick="RejectCall"
        android:padding="15dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/baseline_call_end_24" />

    <ImageButton
        android:id="@+id/answer_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#4CAF50"
        android:onClick="AnswerCall"
        android:padding="15dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/baseline_call_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="#241D1E"
        android:orientation="horizontal"></LinearLayout>
</RelativeLayout>